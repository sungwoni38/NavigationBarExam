<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.SearchFragment">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/h_gline_2_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h_gline_2_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_korea"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/korea" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="한식" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_italy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/italy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="양식" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_japan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/japan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="일식" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_china"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/china" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="중식" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bunsik"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bunsik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="분식" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_drink"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/drink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="카페" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bread"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bread" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="제과" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_fastfood"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fastfood" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="패스트푸드" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="17sp"
                    android:text="기타" />
            </LinearLayout>


        </LinearLayout>

    </HorizontalScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gline_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gline_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/h_gline_2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>